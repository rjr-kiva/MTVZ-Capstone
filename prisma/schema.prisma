// here every changes done run - npx prisma generate to apply changes!

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User_Data {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  email           String? @unique
  password        String?
  name            String?
  age             String?
  address         String?
  contactNo       String?
  gender          String?
  role            String?
  status          String?
}

model Applicant_Data {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  lastName        String?
  middleName      String? 
  firstName       String?
  age             String?
  sex             String?
  address         String?
  contactNo       String?
  birthdate       String?
  sssNo           String?
  philHealthNo    String?
  pagibigNo       String?
  position        String?
  status          String?
}

model Employee_Data {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  lastName        String?
  middleName      String? 
  firstName       String?
  age             String?
  sex             String?
  address         String?
  contactNo       String?
  birthdate       String?
  sssNo           String?
  philHealthNo    String?
  pagibigNo       String?
  position        String?
  status          String?
}

model Blacklisted_Data {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  lastName        String?
  middleName      String? 
  firstName       String?
  age             String?
  sex             String?
  address         String?
  contactNo       String?
  birthdate       String?
  sssNo           String?
  philHealthNo    String?
  pagibigNo       String?
  position        String?
  status          String?
  reason          String?
}

model Company_Data {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  companyName     String?
  companyAddress  String?
  contactNo       String?
  contactPerson   String?
}
// here every changes done run - npx prisma generate to apply changes!

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User_Data {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  email           String? @unique
  password        String?
  name            String?
  age             String?
  address         String?
  contactNo       String?
  gender          String?
  role            String?
  status          String?
}

model Applicant_Data {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  lastName        String?
  middleName      String? 
  firstName       String?
  age             String?
  sex             String?
  address         String?
  contactNo       String?
  birthdate       String?
  sssNo           String?
  philHealthNo    String?
  pagibigNo       String?
  position        String?
  status          String?
  fileName        String?
}

model Employee_Data {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  lastName        String?
  middleName      String? 
  firstName       String?
  age             String?
  sex             String?
  address         String?
  contactNo       String?
  birthdate       String?
  sssNo           String?
  philHealthNo    String?
  pagibigNo       String?
  position        String?
  status          String?
  companyName     String[]
  companyStartDate String[]
  companyEndDate   String[]
  companyRatings  String[]
  currentlyDeployed String
  dateHired       String
  educationalBG   String
}

model Blacklisted_Data {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  lastName        String?
  middleName      String? 
  firstName       String?
  age             String?
  sex             String?
  address         String?
  contactNo       String?
  birthdate       String?
  sssNo           String?
  philHealthNo    String?
  pagibigNo       String?
  position        String?
  status          String?
  reason          String?
}

model Company_Data {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  companyName     String? @unique
  companyAddress  String?
  contactNo       String?
  contactPerson   String?
}

model ApplicantDate_Counter {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  year  Int? @unique
  jan   Int?
  feb   Int?
  mar   Int?
  apr   Int?
  may   Int?
  jun   Int?
  jul   Int?
  aug   Int?
  sep   Int?
  oct   Int?
  nov   Int?
  dec   Int?
}